<Window x:Class="IHM_1v0.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:IHM_1v0"
        mc:Ignorable="d"
        Title="MainWindow" Height="410" Width="800" Background="#FF00669E" ResizeMode="NoResize" ShowInTaskbar="False" WindowStartupLocation="CenterScreen" WindowStyle="None">
    <Grid Background="#FF00669E" Margin="0,0,0,58">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="515*"/>
            <ColumnDefinition Width="144*"/>
            <ColumnDefinition Width="125*"/>
            <ColumnDefinition Width="16*"/>
        </Grid.ColumnDefinitions>
        <Button x:Name="btnIniciar" Content="INICIAR" HorizontalAlignment="Left" Margin="320,277,0,0" VerticalAlignment="Top" Background="{x:Null}" Foreground="White" BorderBrush="{x:Null}" FontSize="36" FontWeight="Bold" FontFamily="Arial Black" Click="btnIniciar_Click"/>
        <Label Content="Sistema de Aperto" HorizontalAlignment="Left" Margin="75,112,0,0" VerticalAlignment="Top" FontSize="72" Foreground="White" Width="650" Grid.ColumnSpan="3"/>

    </Grid>
</Window>
